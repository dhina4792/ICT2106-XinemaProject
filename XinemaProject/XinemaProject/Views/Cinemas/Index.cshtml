@model IEnumerable<XinemaProject.Models.Cinema>


@{
    ViewBag.Title = "Cinemas";
}

<div class="pull-right">
    @Html.Label("Order By")
    @Html.DropDownList("CinemaOrderByDropDownListItems", null, new { onchange = "document.location.href='/Cinemas/Index?id='+this.value;" })
</div>
<div class="clear">
</div>

<div class="container">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-sm-6 col-md-6">
                <div class="thumbnail">

                    <div class="caption">
                        <h3>@Html.DisplayFor(modelItem => item.CinemaName)</h3>
                        <p>@item.CinemaAddress</p>

                    </div>
                </div>
            </div>
        }
    </div>
</div>